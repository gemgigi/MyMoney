<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mm_income_money_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:clickable="true"
        android:text="0.00"
        android:textSize="40sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:textColor="@color/tabFontSelected"
        />
    <LinearLayout
        android:id="@+id/mm_income_category_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mm_income_maincategory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/mm_income_subcategory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:textColor="@color/tabFontSelected"
        />
    <Spinner
        android:id="@+id/mm_income_account_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:textColor="@color/tabFontSelected"
        />
    <TextView
        android:id="@+id/mm_income_date_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="2月19日 13:44"
        android:paddingLeft="16dp"
        android:textSize="20sp"
        android:gravity="center|left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:textColor="@color/tabFontSelected"
        />

    <EditText
        android:id="@+id/mm_income_remark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        />
    <Button
        android:id="@+id/mm_income_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="保存"
        android:textColor="@color/saveButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:gravity="center"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        />
</LinearLayout>