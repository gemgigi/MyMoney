<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="5">

        <!--
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:orientation="horizontal"
            android:layout_gravity="right">-->


        <TextView
            android:id="@+id/result"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="3"
            android:text="0.00"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/one"
            android:background="@drawable/selector"
            android:text="1"
            android:textSize="@dimen/calculatorBtn" />

        <Button
            android:id="@+id/two"
            android:background="@drawable/selector"
            android:text="2"
            android:textSize="@dimen/calculatorBtn" />

        <Button
            android:id="@+id/three"
            android:background="@drawable/selector"
            android:text="3"
            android:textSize="@dimen/calculatorBtn" />

        　　

        <Button
            android:id="@+id/four"
            android:background="@drawable/selector"
            android:text="4"
            android:textSize="@dimen/calculatorBtn" />
        　　

        <Button
            android:id="@+id/five"
            android:background="@drawable/selector"
            android:text="5"
            android:textSize="@dimen/calculatorBtn" />
        　　

        <Button
            android:id="@+id/six"
            android:background="@drawable/selector"
            android:text="6"
            android:textSize="@dimen/calculatorBtn" />
        　

        <Button
            android:id="@+id/seven"
            android:background="@drawable/selector"
            android:text="7"
            android:textSize="@dimen/calculatorBtn" />
        　　

        <Button
            android:id="@+id/eight"
            android:background="@drawable/selector"
            android:text="8"
            android:textSize="@dimen/calculatorBtn" />

        <Button
            android:id="@+id/nine"
            android:background="@drawable/selector"
            android:text="9"
            android:textSize="@dimen/calculatorBtn" />

        <Button
            android:id="@+id/point"
            android:background="@drawable/selector"
            android:text="."
            android:textSize="@dimen/calculatorBtn" />

        <Button
            android:id="@+id/zero"
            android:background="@drawable/selector"
            android:text="0"
            android:textSize="@dimen/calculatorBtn" />
        　　

        <Button
            android:id="@+id/calculator_delete"
            android:background="@drawable/selector"
            android:text="C"
            android:textSize="@dimen/calculatorBtn" />
    </GridLayout>
</LinearLayout>